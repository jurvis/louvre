<div class="ui basic segment">
  <h1 class="ui dividing header">Posts</h1>

  <div class="actions">
    <%= link to: admin_post_path(@conn, :new), class: "ui right floated primary button" do %>
      <i class="icon unmute"></i>
      Add Post
    <% end %>
  </div>
</div>

<div class="ui basic segment">
  <%= if Enum.any?(@posts) do %>
    <table class="ui celled striped table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Slug</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= for post <- @posts do %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.slug %></td>
            <td class="center aligned">
              <div class="ui tiny basic buttons">
                <div class="ui button">View</div>
                <%= link "Edit", to: admin_post_path(@conn, :edit, post), class: "ui button" %>
                <%= link "Delete", to: admin_post_path(@conn, :delete, post), method: :delete, data: [confirm: "Are you sure?"], class: "ui button" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
