<table class="ui celled striped table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Published</th>
      <th>Vanity Domain</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= for post <- @posts do %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link truncate(post.title, 50), to: admin_post_path(@conn, :edit, post) %></td>
        <td><%= status_label(post) %></td>
        <td><%= vanity_link(post) %></td>
        <td class="center aligned">
          <div class="ui tiny basic buttons">
            <%= link "View", to: post_path(@conn, :show, post.slug), class: "ui button" %>
            <%= link "Add Photos", to: admin_post_photo_path(@conn, :index, post.slug), class: "ui button" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
